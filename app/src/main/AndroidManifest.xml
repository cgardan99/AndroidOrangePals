<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.orangepals">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ModificarPublicacion"
            android:noHistory="true"/>
        <activity android:name=".ModificarUsuario"
            android:noHistory="true"/>
        <activity
            android:name=".EditarComentario"
            android:noHistory="true"/>
        <activity android:name=".CerrarSesion" />
        <activity android:name=".UserBookmarks" />
        <activity android:name=".DetalleUsuario"
            android:noHistory="true"/>
        <activity android:name=".MainActivity" android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EliminarUsuario"
            android:noHistory="true"
            android:label="@string/title_activity_eliminar_usuario">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Iniciar_Sesion"
            android:label="@string/app_name" />
        <activity
            android:name=".Interfaz_Usuario"
            android:label="@string/app_name" />
        <activity
            android:name=".Registro"
            android:label="@string/app_name" />
        <activity
            android:name=".Nueva_Publicacion"
            android:label="@string/app_name" />
        <activity
            android:name=".Publicacion"
            android:noHistory="true"
            android:label="@string/app_name" />
    </application>

</manifest>