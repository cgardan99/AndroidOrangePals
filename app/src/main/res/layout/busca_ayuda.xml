<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Busca ayuda Profesional"
            android:layout_margin="10dp"
            android:textColor="@color/naranja"
            android:textSize="30sp"
            android:id="@+id/encabezado"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu nombre:"
            android:layout_below="@id/encabezado"
            android:textColor="@color/negro"
            android:layout_marginLeft="30dp"
            android:textSize="25sp"
            android:id="@+id/tu_nombre"></TextView>
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tu_nombre"
            android:layout_centerHorizontal="true"
            android:hint="Nombre completo"
            android:id="@+id/input1"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinos tu problema:"
            android:layout_below="@id/input1"
            android:textColor="@color/negro"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:id="@+id/dinos_tu_problema"></TextView>
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dinos_tu_problema"
            android:layout_centerHorizontal="true"
            android:hint="Desahogate, con libertad"
            android:id="@+id/input2"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medios de contacto:"
            android:layout_below="@id/input2"
            android:textColor="@color/negro"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:id="@+id/medios_de_contacto"></TextView>
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medios_de_contacto"
            android:layout_centerHorizontal="true"
            android:hint="telefono, correo, etc"
            android:id="@+id/input3"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/importancia"
            android:layout_below="@id/input3"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/importancia"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu vida vale mucho."
            android:layout_below="@+id/importancia"
            android:textColor="@color/negro"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:id="@+id/importancia2"></TextView>

        <Button
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_below="@id/importancia2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/fondo_boton"
            android:text="Enviar"
            android:textColor="@color/blanco"
            android:textSize="25dp"></Button>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>