<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="246dp"
        android:padding="50sp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Estás seguro de eliminar tu usuario?"
            android:textColor="@color/negro"
            android:textSize="20sp"
            android:layout_marginBottom="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Considera que después de esta acción no podrás recuperar el usuario ni publicaciones, ni comentarios ni nada que se le relacione."
            android:textSize="20sp"
            android:layout_marginBottom="20sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Entiendes el riesgo?"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="20sp"/>

        <Button
            android:layout_height="40sp"
            android:layout_width="100sp"
            android:padding="10sp"
            android:background="#E10000"
            android:text="Eliminar"
            android:textColor="@color/blanco"
            android:id="@+id/eliminarUsuario"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>