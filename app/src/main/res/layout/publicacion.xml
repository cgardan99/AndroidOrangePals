<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="370dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/fondo_transparente"
                    android:text="Regresar a publicaciones"
                    android:textSize="23sp"
                    android:textColor="@color/naranja"
                    android:id="@+id/regresar"></Button>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TÃ­tulo 1"
                    android:textSize="40sp"
                    android:textColor="@color/naranja"
                    android:textStyle="bold"
                    android:layout_below="@+id/regresar"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/Titulo"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/publicacion"
                    android:layout_below="@+id/Titulo"
                    android:textSize="30dp"
                    android:textColor="@color/negro"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/publicacion"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comentarios: "
                    android:textColor="@color/negro"
                    android:layout_below="@id/publicacion"
                    android:textSize="25dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:id="@+id/subtitulo"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/comentario"
                    android:textSize="25sp"
                    android:layout_below="@id/subtitulo"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/negro"
                    android:id="@+id/comentario1"></TextView>
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/comentario1"
                    android:layout_marginLeft="55dp"
                    android:background="@drawable/icon_comentario"
                    android:layout_marginTop="10dp"
                    android:id="@+id/btn_comentar"></Button>
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/comentario1"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/icon_like"
                    android:id="@+id/btn_like"></Button>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comentar algo: "
                    android:layout_below="@id/btn_like"
                    android:textSize="25sp"
                    android:textColor="@color/negro"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/subtitulo2"></TextView>
                <EditText
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subtitulo2"
                    android:layout_centerHorizontal="true"
                    android:hint="siempre con respeto"
                    android:id="@+id/input_comentario"></EditText>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>