<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="184dp"
        android:padding="20sp">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle del Usuario"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/us_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="48dp"
            android:textSize="15sp"
            android:textColor="@color/negro"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/us_pais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="País de procedencia"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="79dp"
            android:textColor="@color/negro"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/us_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="correo electrónico"
            tools:layout_editor_absoluteX="174dp"
            tools:layout_editor_absoluteY="227dp"
            android:textColor="@color/negro"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_height="40sp"
                    android:padding="10sp"
                    android:layout_marginStart="10sp"
                    android:background="@color/colorPrimaryDark"
                    android:text="Editar"
                    android:textColor="@color/blanco"
                    android:id="@+id/editarUsuario"/>
                <Button
                    android:layout_height="40sp"
                    android:padding="10sp"
                    android:layout_marginStart="10sp"
                    android:background="#E10000"
                    android:text="Eliminar Usuario"
                    android:textColor="@color/blanco"
                    android:id="@+id/eliminarUsuario"/>
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="Tus Publicaciones"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/us_publicaciones" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>